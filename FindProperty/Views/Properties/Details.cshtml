@model FindProperty.Models.Property

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Property</h4>
    <hr />
    @{var target = "#carousel" + Model.id.ToString();
        var id = "carousel" + Model.id.ToString(); }
    <div class="card mb-3">
        <div class="card-body">
            <div class="mb-1">
                <div id="@id" class="carousel slide" data-bs-touch="false" data-bs-interval="false">
                    <ol class="carousel-indicators">
                        <li type="button" data-target="@target" data-slide-to="0" class="active"></li>
                        @for (int i = 1; i < @Model.images.Count; i++)
                        {
                            <li type="button" data-target="@target" data-slide-to="@i"></li>
                        }
                    </ol>
                    <div class="carousel-inner" style="background-color:dimgray">
                        @for (int i = 0; i < @Model.images.Count(); i++)
                        {
                            if (i == 0)
                            {
                                <div class="carousel-item active text-center" style="height:600px">
                                    <img src="@Model.images[i]" style="max-width: 100%; max-height: 100%;">
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item text-center">
                                    <img src="@Model.images[i]" style="max-width: 100%; max-height: 100%;">
                                </div>
                            }
                        }
                    </div>
                    <a class="carousel-control-prev" href="@target" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="@target" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <h4 class="card-title my-3">@Model.type</h4>
            <h4 class="card-title my-3">RM @Model.fee</h4>
            <div class="my-3">
                <h4 mb-1 text-muted">@Model.title</h4>
                <h5>@Model.address</h5>
            </div>
            <p class="card-subtitle my-3">@Model.type | Built-up : @Model.size sq. ft. | @Model.furnishing</p>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-body">
            <h4 class="card-title my-3">@Model.title</h4>
            <p style="white-space: pre-wrap;">@Model.description</p>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-body">
            <h4>Property Details</h4>
            <hr />
            <label>Property Type:</label>
            <p>@Model.type</p>
            <label>Built-up Size:</label>
            <p>@Model.size sq. ft.</p>
            <label>Furnshing</label>
            <p>@Model.furnishing</p>
            <label>Posted Date:</label>
            <p>@Model.created_at</p>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-body">
            <h4>Agent</h4>
            <hr />
            <div style="height: 100px; width: 100px;" class="text-center">
                <img src="@Model.Agent.profile_picture" class="rounded-circle z-depth-2" style="max-height:100%; max-width: 100%" /><br />
            </div>        
            <label>Name:</label>
            <p>@Model.Agent.name</p>
            <label>Contact Number:</label>
            <p>@Model.Agent.phone_number</p>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
