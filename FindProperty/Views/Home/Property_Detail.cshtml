
@{
    ViewData["Title"] = "Property Detail Page";
}
<div class="container" style="margin-bottom:100px;">
    <div class="row">
        <div class="col-md-5 pr-2 d-inline-block mt-5" style="">
            <div class="multiple-items">
                <div style="max-height:430px;">
                    <img src="https://img.rea-asia.com/my-iproperty/premium/800x460-fit,format=webp/w-0fjr46328a29-0036-412c-9232-3469289b33b5_1076x780.png" class="img-thumbnail">

                </div>
                <div style="max-height:430px;">
                    <img src="https://img.rea-asia.com/my-iproperty/premium/800x460-fit,format=webp/w-0fjr46328a29-0036-412c-9232-3469289b33b5_1076x780.png" class="img-thumbnail">

                </div>
            </div>
        </div>

        <div class="col-md-5 ml-3 mt-5" style="background-color:white;max-height:450px;display:inline-block;border:1px solid #e2e2e2;">
            <form action="" method="post">
                <h5 class="pt-2" style="font-weight:700;">The Rosewoodz ,Bukit Jalil, Bukit Jalil</h5>
                <div class="row">
                    <div class="col-sm-1  pl-3 pt-1">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="col-sm-10">
                        <p class="pl-2 pt-1">Jalan 4/155, Bukit Jalil, 58200, Kuala Lumpur</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-1  pl-3 pt-1">
                        <i class="fas fa-square pl-3 pt-1"></i>
                    </div>
                    <div class="col-sm-10">
                        <p class="pl-2 pt-1">1,155 sq. ft.</p>
                    </div>
                </div>
                <div class="row pt-1 pl-3">
                    <p style="font-weight:700;font-size:40px;">RM835,900</p>
                </div>
                <div class="row pt-1 pl-3">
                    <div class="col-sm-1">
                        <label style="font-weight:700;">Type:</label>
                    </div>
                    <div class="col-sm-10">
                        <p style="font-weight:700;padding-left:20px;">3 rooms</p>
                    </div>
                </div>
                @*<button data-toggle="modal" data-target="#exampleModal" class="col-4 offset-4 mb-3" style="cursor:pointer;height:50px;border-radius:30px;color:white;background-color:blue;">
                    Booking
                </button>*@
                <div class=""col-4 offset-4 mb-3">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" class="mx-auto">
                        Booking
                    </button>
                </div>
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Booking Detail</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="input-group"style="text-align:center;">
                                    <label>Booking Date:</label> <input class="mx-auto" name="date"id="date"type="date">
                                </div>
                            </div>
                            <div class="modal-footer">
                                <form type="post">
                                    <input type="hidden" id="property_id" value="">
                                    <input type="hidden" id="booking_date" value="date">
                                    <button type="button" class="btn btn-primary">Confirm Booking</button>
                                </form>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>

</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js" integrity="sha512-HGOnQO9+SP1V92SrtZfjqxxtLmVzqZpjFFekvzZVWoiASSQgSr4cw9Kqd2+l8Llp4Gm0G8GIFJ4ddwZilcdb8A==" crossorigin="anonymous"></script>

<script type="text/javascript" language="javascript">

    $('.multiple-items').slick({
        infinite: true,
        slidesToShow: 1,
        slidesToScroll: 1,
        autoplay: true
    });
</script>
