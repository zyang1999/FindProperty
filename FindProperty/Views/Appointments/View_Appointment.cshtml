@model IEnumerable<FindProperty.Models.Appointment>

@{
    ViewData["Title"] = "View_Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Appointment</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.user_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.property_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.appointment_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.user_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.property_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.appointment_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>               
                    <a asp-action="Delete" asp-route-id="@item.id">Cancel</a>
                </td>
            </tr>
        }
    </tbody>
</table>
